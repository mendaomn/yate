{
  "name": "yate",
  "version": "1.0.0",
  "description": "Yet Another Testing Framework (and assertions)",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "lint:types": "tsc -p ./jsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm-run-all --parallel lint lint:types test:coverage"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  },
  "keywords": [],
  "author": "Alessandro Menduni <menduni@westwingsolutions.com> (https://github.com/mendaomn)",
  "license": "MIT",
  "engines": {
    "node": "10.15.0"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-plugin-jest": "^22.13.6",
    "ghooks": "^2.0.4",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.5.3"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mendaomn/yate.git"
  },
  "bugs": {
    "url": "https://github.com/mendaomn/yate/issues"
  },
  "homepage": "https://github.com/mendaomn/yate#readme"
}
